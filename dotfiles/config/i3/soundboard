mode "soundboard" {
  bindsym Shift+w exec "${HOME}/.local/bin/play ${HOME}/Sounds/Spider_Solitaire_Win.mp3"
  bindsym Shift+l exec "${HOME}/.local/bin/play ${HOME}/Sounds/Spider_Solitaire_Lose.mp3"
  bindsym n exec "${HOME}/.local/bin/play ${HOME}/Sounds/noot.mp3"
  bindsym t exec "${HOME}/.local/bin/play ${HOME}/Sounds/react_think.mp3"
  bindsym 3 exec "${HOME}/.local/bin/play ${HOME}/Sounds/fr_3-litres-de-pisse.mp3"
  bindsym 0 exec "${HOME}/.local/bin/play ${HOME}/Sounds/music_10secs_britains_brainest.mp3"
  bindsym Shift+0 exec "${HOME}/.local/bin/play ${HOME}/Sounds/music_10secs_chiffres_lettres.mp3"

  bindsym p mode "sb-pokemon"
  bindsym s mode "sb-sfx"
  bindsym m mode "sb-music"
  bindsym g mode "sb-gate"
  bindsym w mode "sb-worms"
  bindsym l mode "sb-lolen"
  bindsym d mode "sb-dota"

  bindsym k exec "pkill play"
  bindsym Escape mode "default"
  bindsym BackSpace mode "default"
  bindsym XF86AudioRaiseVolume exec "pactl set-sink-mute 0 false && pactl set-sink-volume 0 +5%"
  bindsym XF86AudioLowerVolume exec "pactl set-sink-mute 0 false && pactl set-sink-volume 0 -5%"
  bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle"
}

